<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrganizerApp1.Pages.AddEventPage">
    <StackLayout Padding="10">
        <Label Text="Добавление мероприятия" 
               FontSize="24" 
               HorizontalOptions="Center" 
               VerticalOptions="Start" 
               FontAttributes="Bold" 
               Padding="10"/>
        <Label Text="Название мероприятия" />
        <Entry x:Name="EventNameEntry" />

        <Label Text="Дата мероприятия" />
        <DatePicker x:Name="EventDatePicker" />

        <Label Text="Время мероприятия" />
        <TimePicker x:Name="EventTimePicker" />

        <Label Text="Описание мероприятия" />
        <Editor x:Name="EventDescriptionEditor" HeightRequest="100" />

        <Button Text="Сохранить" 
                Clicked="OnSaveEventClicked"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="LightGrey" />
    </StackLayout>
</ContentPage>